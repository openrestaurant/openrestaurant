{#
/**
 * @file
 * Template for Hero block.
 */
#}
{%
set classes = [
'block',
'block--' ~ bundle|clean_class,
'block--' ~ id|clean_class,
bundle|clean_class
]
%}
<div{{ attributes.addClass(classes)|without('id') }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {% block content %}
    {{ content.field_hero_image }}
    <div class="hero__caption">
      {{ content.field_hero_caption }}
      {{ content.field_hero_link }}
    </div>
  {% endblock %}
</div>
